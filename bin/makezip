#!/usr/bin/env bash
set -euo pipefail && cd "$(dirname "${BASH_SOURCE[0]}")/.."

abspath() {
    python -c "import os,sys; print os.path.abspath(sys.argv[1])" "$1"
}

target=$(abspath srv/main.zip)

rm -f "$target"

pushd main/lib
zip -r "$target" --exclude='*.pyc' .
popd

pushd third_party
zip -r "$target" --exclude='*.pyc' .
popd

echo

shasum "$target"
